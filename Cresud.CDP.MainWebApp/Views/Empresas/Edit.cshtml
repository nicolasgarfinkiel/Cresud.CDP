<div class="row">    
    <div class="col-sm-12">
        <section class="panel panel-default">
            <header class="panel-heading font-bold">{{operation}}</header>
            <div class="panel-body">
                <form class="bs-example form-horizontal">                                                                                                                                                                                        
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Grupo empresa</label>
                        <div class="col-lg-10">                            
                            <select ng-model="entity.grupoEmpresaId" ng-options="grupoEmpresa.id as grupoEmpresa.descripcion for grupoEmpresa in data.grupoEmpresaList" class="form-control">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">País</label>
                        <div class="col-lg-10">
                            <span style="position: relative; top: 8px;">{{entity.grupoEmpresa.paisDescripcion}}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Organización</label>
                        <div class="col-lg-10">                            
                            <select ng-model="entity.idSapOrganizacionDeVenta" ng-options="organizacion for organizacion in data.organizacionVentaList" class="form-control">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>                   
                    <div class="form-group" ng-if="entity.idSapOrganizacionDeVenta">
                        <label class="col-lg-2 control-label">Cliente</label>
                        <div class="col-lg-10">
                            <ui-select name="cliente" ng-model="entity.cliente" theme="select2" style="width: 100%;" append-to-body="true">
                                <ui-select-match>{{$select.selected.id}}. {{$select.selected.razonSocial}}</ui-select-match>
                                <ui-select-choices refresh-on-active="true" refresh="getSelectSource($select)" refresh-delay="300" repeat="item in selectList | filter: $select.search">                                    
                                    <div>{{item.razonSocial}}</div>
                                    <small>
                                        <span>(IdCliente: {{item.id}})</span>
                                    </small>
                                    <div ng-if="$index == $select.items.length-1 && currentPage < pageCount">
                                        <button class="btn btn-xs btn-info"
                                                style="width: 100%; margin-top: 5px;"
                                                ng-click="getSelectSource($select, $event);">
                                            Siguiente
                                        </button>
                                    </div>
                                </ui-select-choices>
                            </ui-select>                                                      
                        </div>
                    </div>    
                    <div class="alert alert-danger" ng-if="result.hasErrors">
                        <i class="fa fa-bolt"></i>
                        <div ng-repeat="message in result.messages">{{message}}</div>
                    </div>                    
                </form>
            </div>
            <footer class="panel-footer font-bold text-right">
                <button type="button" class="btn btn-sm btn-success btn-default" ng-click="save()">Aceptar</button>
                <button type="button" class="btn btn-sm btn-default" ng-click="list()">Volver</button>
            </footer>
        </section>
    </div>
</div>

