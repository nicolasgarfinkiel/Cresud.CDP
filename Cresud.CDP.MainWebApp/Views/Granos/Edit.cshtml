<div class="row">    
    <div class="col-sm-12">
        <section class="panel panel-default">
            <header class="panel-heading font-bold">{{operation}}</header>
            <div class="panel-body">
                <form class="bs-example form-horizontal">                                                                                                                                         
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Descripción</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" ng-model="entity.nombre">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Material SAP</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" ng-model="entity.idMaterialSap">
                        </div>
                    </div>                    
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Especie</label>
                        <div class="col-lg-10">                            
                            <select ng-model="entity.especieAfipId" ng-options="especie.id as especie.descripcion for especie in data.especies" class="form-control" >
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Cosecha</label>
                        <div class="col-lg-10">                            
                            <select ng-model="entity.cosechaAfipId" ng-options="cosecha.id as cosecha.descripcion for cosecha in data.cosechas" class="form-control">
                                <option value=""></option>
                            </select>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Tipo</label>
                        <div class="col-lg-10">
                            <select ng-model="entity.tipoGranoAfipId" ng-options="tipo.id as tipo.descripcion for tipo in data.tiposGrano" class="form-control">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>   
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Sujeto a Lote</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" ng-model="entity.sujetoALote">
                        </div>
                    </div>                                                                                                        
                    <div class="alert alert-danger" ng-if="result.hasErrors">
                        <i class="fa fa-bolt"></i>
                        <div ng-repeat="message in result.messages">{{message}}</div>
                    </div>
                </form>
            </div>
            <footer class="panel-footer font-bold text-right">
                <button type="button" class="btn btn-sm btn-success btn-default" ng-click="save()">Aceptar</button>
                <button type="button" class="btn btn-sm btn-default" ng-click="list()">Volver</button>
            </footer>
        </section>
    </div>
</div>